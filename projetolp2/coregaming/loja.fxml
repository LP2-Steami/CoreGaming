<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projetolp2.coregaming.Controllers.LojaController">
    <children>
        <MenuBar layoutY="1.0" prefHeight="30.0" prefWidth="800.0">
            <menus>
                <Menu fx:id="loja" mnemonicParsing="false" onAction="#onLojaButtonClicked" text="Loja" />
                <Menu fx:id="biblioteca" mnemonicParsing="false" onAction="#onBibliotecaButtonClicked" text="Biblioteca" />
                <Menu fx:id="usuario" mnemonicParsing="false" text="Usuário">
                    <items>
                        <MenuItem fx:id="verPerfil" mnemonicParsing="false" onAction="#onVerPerfilButtonClicked" text="Ver perfil" />
                        <MenuItem fx:id="atualizarPerfil" mnemonicParsing="false" onAction="#onAtualizarPerfilButtonClicked" text="Alterar perfil" />
                        <MenuItem fx:id="sairPerfil" mnemonicParsing="false" text="Sair" />
                    </items>
                </Menu>
                <Menu fx:id="carrinho" mnemonicParsing="false" onAction="#onCarrinhoButtonClicked" text="Carrinho" />
            </menus>
        </MenuBar>

        <ScrollPane fx:id="scrollPane" layoutY="30.0" prefHeight="370.0" prefWidth="800.0" hbarPolicy="ALWAYS" vbarPolicy="NEVER">
            <content>
                <HBox fx:id="gameContainer" spacing="20" alignment="CENTER_LEFT">
                    <ImageView fx:id="gameImage1" fitHeight="250" fitWidth="200" preserveRatio="true" />
                    <ImageView fx:id="gameImage2" fitHeight="250" fitWidth="200" preserveRatio="true" />
                </HBox>
            </content>
        </ScrollPane>

    </children>

    <!-- Personalizando a barra de rolagem e outros estilos -->
    <stylesheets>
        <stylesheet>
            .scroll-bar {
            -fx-background-color: transparent; /* Barra de rolagem com fundo transparente */
            }

            .scroll-bar .thumb {
            -fx-background-color: rgba(0, 0, 0, 0.5); /* Controle de rolagem com fundo semi-transparente */
            -fx-background-radius: 5px; /* Borda arredondada do controle */
            }

            .scroll-bar .track {
            -fx-background-color: rgba(0, 0, 0, 0.1); /* Fundo da barra de rolagem */
            -fx-background-radius: 5px; /* Borda arredondada da barra */
            }

            #gameContainer {
            -fx-spacing: 20px;
            -fx-padding: 10px;
            }

            .button {
            -fx-background-color: #333333; /* Cor de fundo dos botões */
            -fx-text-fill: white; /* Cor do texto */
            -fx-padding: 10px 20px; /* Padding interno dos botões */
            -fx-font-size: 14px; /* Tamanho da fonte */
            -fx-border-radius: 5px; /* Bordas arredondadas dos botões */
            }

            .button:hover {
            -fx-background-color: #555555; /* Cor de fundo quando o botão é passado o mouse por cima */
            }
        </stylesheet>
    </stylesheets>

</AnchorPane>
